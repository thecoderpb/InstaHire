<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.runtime.rebel.instahire.ui.login.LoginFragment"
        android:label="Login" />

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.runtime.rebel.instahire.ui.reset.ForgotPasswordFragment"
        android:label="Forgot Password" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.runtime.rebel.instahire.ui.registration.RegistrationFragment"
        android:label="Register" />

    <action
        android:id="@+id/action_loginFragment_to_registerFragment"
        app:destination="@id/registerFragment" />

    <action
        android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
        app:destination="@id/forgotPasswordFragment" />

</navigation>